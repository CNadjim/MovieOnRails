<!-- Page Contents -->
<div class="pusher">
  <div class="ui inverted vertical center aligned segment landing">

    <div class="ui container masthead">
      <div class="ui large secondary inverted pointing menu">
        <a class="toc item">
          <i class="sidebar icon"></i>
        </a>
        <a class="active item">Home</a>
        <a class="item">Films</a>
        <a class="item">Séries</a>
        <a class="item">Contact</a>
        <div class="right item">
          <a class="ui inverted button">Log in</a>
          <a class="ui inverted button">Sign Up</a>
        </div>
      </div>
    </div>

    <div class="ui text container">
      <div class="item">
        <h1 class="ui inverted header">MovieOnRails</h1>
        <h2>Découvrez, notez et partagez avec vos amis</h2>
        <button class="ui facebook button">
          <i class="facebook icon big "></i>
          Commencez maintenant
        </button>
      </div>
    </div>

    <div class="swiper-container">
      <div class="swiper-wrapper">
        <% @movies.each do |movie| %>
          <div class="swiper-slide">
            <a href="#" class="vignette" style="background-image: url('<%= movie.poster_path %>')"></a>
          </div>
        <% end %>
      </div>
      <!-- Add Arrows -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>

      <!-- Add Pagination
      <div class="swiper-pagination"></div>-->
    </div>

  </div>

  <div class="ui vertical stripe segment">
    <div class="ui middle aligned stackable grid container">
      <div class="row">
        <div class="center aligned column">
          techno
        </div>
      </div>
    </div>
  </div>

</div>
  <!-- Initialize Swiper -->
  <script>
      var swiper = new Swiper('.swiper-container', {
          slidesPerView: 5,
          spaceBetween: 0,
          pagination: {
              el: '.swiper-pagination',
              clickable: true,
          },
          navigation: {
              nextEl: '.swiper-button-next',
              prevEl: '.swiper-button-prev',
          },
          breakpoints: {
              1024: {
                  slidesPerView: 4,
              },
              768: {
                  slidesPerView: 3,
              },
              640: {
                  slidesPerView: 2,
              },
              320: {
                  slidesPerView: 1,
              }
          }
      });


  </script>


