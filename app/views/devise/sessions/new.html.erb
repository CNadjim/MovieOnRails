<div class="card">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="card-body p-6">
      <h2 class="card-title">Login to your account</h2>
      <div class="form-group">
        <%= f.label :email , class: "form-label"%>
        <%= f.email_field :email, autofocus: true,class: "form-control", autocomplete: "email" %>
      </div>
      <div class="form-group">
        <label class="form-label">
          <%= f.label :password,class: "form-label" %>
        </label>
        <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <%= f.check_box :remember_me ,class:"custom-control-input"%>
          <%= f.label :remember_me ,class:"custom-control-label"%>
        </label>
      </div>
      <div class="form-footer">
        <%= f.submit "Log in" ,class:"btn btn-primary btn-block"%>
      </div>
    </div>

  <% end %>
</div>

<%= render "devise/shared/links" %>
