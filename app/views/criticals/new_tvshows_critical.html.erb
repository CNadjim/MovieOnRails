<div class="my-3 my-md-5">
  <div class="map-header customHeader">
    <div class="map-header-layer" style="background-image: url(<%= @critical.tvshow.backdrop_path %>)">
    </div>
  </div>
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">
        Critique de la s√©rie <span><%= link_to @critical.tvshow.name, @critical.tvshow, method: :get %></span>
      </h1>
    </div>
    <div class="row">
      <div class="col-lg-4 col-md-8  col-sm-12 m-auto">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Film information</h3>
          </div>
          <div class="card-body">
            <div class="media mb-5">
              <img class="d-flex mr-5 rounded w-50" src="<%= @critical.tvshow.poster_path%>" alt="Generic placeholder image">
              <div class="media-body">
                <h5><%= @critical.tvshow.name%> </h5>
                <h6 class="text-muted"><%=@critical.tvshow.first_air_date.strftime("%d/%m/%Y")%></h6>
                <div class="text-muted small">
                  Original title : <%= @critical.tvshow.original_name%>
                </div>

              </div>
            </div>
            <div class="h5">Description</div>
            <p><%= @critical.tvshow.overview%></p>
          </div>
        </div>
      </div>

      <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Composer une nouvelle critique</h3>
          </div>
          <div class="card-body">
              <%= simple_form_for @critical,:url => '/criticals/tvshows/'+@critical.tvshow.id.to_s, :method => :post do |form|  %>
              <div class="form-group">
                <div class="row align-items-center">
                  <label class="col-sm-2">Film:</label>
                  <div class="col-sm-10">
                    <%= form.hidden_field :tvshow_id, id: :critical_tvshow_id %>
                    <input type="text" class="form-control" disabled value="<%= @critical.tvshow.name%>">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row align-items-center">
                  <label class="col-sm-2">Titre:</label>
                  <div class="col-sm-10">
                    <%= form.text_field :title, id: :critical_title,class:"form-control" ,:required => true %>
                  </div>
                </div>
              </div>

              <%= form.text_area :text, id: :critical_text, class:"form-control",rows:"10" ,:required => true%>
              <div class="btn-list mt-4 text-right">
                <button type="reset" class="btn btn-secondary btn-space">Annuler</button>

                <%= form.submit 'Poster cette critique',class:"btn btn-primary btn-space"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>